<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".exoplayer.MyPlayerActivity">

    <!--to not use default controller make use_controller=false
    show timeout tells the time in ms after which controller should be hidden
    ff_increment is increment in ms
    rewind_increment is increment in ms
    use controller_layout_id to get custom controller
    -->


    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/video_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:use_controller="true"
        app:show_timeout="5000"
        app:controller_layout_id="@layout/playback_controller_with_logo"
        >

    </com.google.android.exoplayer2.ui.PlayerView>
</FrameLayout>